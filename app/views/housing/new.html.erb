<div class="row main">
  <section>
    <div class="col-md-3 col-sm-3 col-xs-12">
      <h3>物业缴费</h3>
    </div>

    <div class="products-list">
      <% @products.each do |product| %>
      <div class="card col-md-2 col-sm-3 col-lg-2 col-xs-4">
        <a href="/products/{{id}}">
          <div class="image">
            <img src="{{cover_image}}">
          </div>
          <div class="desc">
            <h3>{{name}}</h3>
            <p>
              {{#origin_price}}
              <span class="origin">{{origin_price}}</span>
              {{/origin_price}}
              <span class="price">{{price}}</span>
            </p>
          </div>
        </a>
      </div>
    </div>

  </section>
</div>

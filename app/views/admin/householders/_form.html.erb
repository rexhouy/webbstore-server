<%= form_for([:admin, @householder], html: {class: "form-horizontal"}) do |s| %>
  <% if @householder.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>保存失败</strong>
    <ul>
      <% @householder.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= s.label :no, "房号", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-6">
      <%= s.text_field :no, :class => "form-control", required: true %>
    </div>
  </div>


  <div class="form-group">
    <%= s.label :name, "业主姓名", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-6">
      <%= s.text_field :name, :class => "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= s.label :tel, "联系电话", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-6">
      <%= s.telephone_field :tel, :class => "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= s.label :house_size, "户型面积", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-6">
      <%= s.number_field :house_size, class: "form-control", step: "any", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "确认",  data: { disable_with: "请稍后..."},  :class => "btn btn-primary" %>
      <%= link_to "取消", admin_householders_path, :class => "btn btn-default" %>
    </div>
  </div>

<% end %>

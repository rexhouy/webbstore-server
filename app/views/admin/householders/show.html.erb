<h1 class="page-header">业主信息</h1>

<% if notice.present? %>
<div class="alert alert-info" role="alert">
  <%= notice %>
</div>
<% end %>

<div class="control-panel">
  <%= link_to "编辑", edit_admin_householder_path(@householder), class: "btn btn-primary"%>
  <%= link_to admin_back_url(admin_householders_path), class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> 返回
  <% end %>
</div>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">房号</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @householder.no %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">业主姓名</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @householder.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">联系电话</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @householder.tel %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">户型大小</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @householder.house_size %> m<sup>2</sup></p>
    </div>
  </div>
</div>

<h1 class="page-header">产品管理</h1>

<ul class="link-group">
  <li>
    <%=link_to "类目管理", admin_categories_path%>
  </li>
</ul>


<%= link_to new_admin_product_path,  :class => "btn btn-primary" do %>
<span class="glyphicon glyphicon-plus"></span> 新建
<% end %>

<table class="table">
  <thead>
    <tr>
      <td>#</td>
      <td>名称</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= product.name  %></td>
      <td>
        <%= link_to edit_admin_product_path(product) do %>
        <span class="glyphicon glyphicon-pencil icon"></span>
        <% end %>
        <%= link_to admin_product_path(product), method: :delete do %>
        <span class="glyphicon glyphicon-trash icon"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <%= will_paginate @products, page_links: false %>
      </td>
    </tr>
    </tfoot>
</table>

<h1 class="page-header">商品详情</h1>
<div class="control-panel">
  <%= link_to edit_admin_product_path(@product), class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-pencil"></span> 编辑
  <% end %>
  <%= link_to admin_back_url(admin_products_path), class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> 返回
  <% end %>
</div>

<div class="row">
  <div class="col-sm-3">
    <%=image_tag @product.cover_image, style: "width:100%;"%>
  </div>
  <div class="col-sm-9">
    <div class="form-horizontal">

      <div class="form-group">
        <label class="control-label col-sm-2">名称</label>
        <p class="form-control-static col-sm-8">
          <%=@product.name%>
        </p>
      </div>
      <% if @product.specifications.present? %>
      <div class="form-group">
        <label class="control-label col-sm-2">规格</label>
        <div class="col-sm-8">
          <table class="table">
            <thead>
              <tr>
                <td>名称</td>
                <td>值</td>
                <td>价格</td>
              </tr>
            </thead>
            <tbody>
              <% @product.specifications.each do |spec| %>
              <tr>
                <td><%=spec.name%></td>
                <td><%=spec.value%></td>
                <td><%=number_to_currency spec.price, locale: :'zh-CN', precision: 2%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% else %>
      <div class="form-group">
        <label class="control-label col-sm-2">价格</label>
        <p class="form-control-static col-sm-8">
          <%=number_to_currency @product.price, locale: :'zh-CN', precision: 2%>
        </p>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">销量</label>
        <p class="form-control-static col-sm-8">
          <%=@product.sales%>
        </p>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2">星级</label>
        <p class="form-control-static col-sm-8">
          <%@product.description.to_i.times do %>
          <i class="glyphicon glyphicon-star"></i>
          <% end %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>


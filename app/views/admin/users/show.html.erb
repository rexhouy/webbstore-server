<h1 class="page-header">用户信息</h1>
<div class="control-panel">
  <%= link_to "编辑", edit_admin_user_path(@user), class: "btn btn-primary"%>
  <%= link_to admin_back_url(admin_users_path), class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-arrow-left"></span> 返回
  <% end %>
</div>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">名字</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.tel %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">角色</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= role_name @user %></p>
    </div>
  </div>
  <% unless @user.customer? %>
  <div class="form-group">
    <label class="col-sm-2 control-label">所属卖家</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.group.name unless @user.group.nil? %></p>
    </div>
  </div>
  <% end %>
  <% if @user.supplier? %>
  <div class="form-group">
    <label class="col-sm-2 control-label">所属供应商</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @user.supplier.name unless @user.supplier.nil? %></p>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">状态</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= user_status @user %></p>
    </div>
  </div>
</div>

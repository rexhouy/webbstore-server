<h1 class="page-header">频道管理<small> 主页显示项目</small></h1>

<%= link_to new_admin_channel_path,  :class => "btn btn-primary" do %>
<span class="glyphicon glyphicon-plus"></span> 新建
<% end %>

<table class="table">
  <thead>
    <tr>
      <td>#</td>
      <td>名称</td>
      <td>链接</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @channels.each_with_index do |channel, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= channel.name %></td>
      <td><%= channel.url%></td>
      <td>
        <%= link_to admin_channel_path(channel) do %>
        <span class="glyphicon glyphicon-eye-open icon"></span>
        <% end %>
        <%= link_to edit_admin_channel_path(channel) do %>
        <span class="glyphicon glyphicon-pencil icon"></span>
        <% end %>
        <%= link_to admin_channel_path(channel), method: :delete, data: {confirm: %(确定要删除"#{channel.name}"吗？)} do %>
        <span class="glyphicon glyphicon-trash icon"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <%= page_info @channels %>
        <%= will_paginate @channels %>
      </td>
    </tr>
    </tfoot>
</table>

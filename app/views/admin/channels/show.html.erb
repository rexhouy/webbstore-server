<h1 class="page-header">查看频道</h1>

<% if notice.present? %>
<div class="alert alert-info" role="alert">
  <%= notice %>
</div>
<% end %>

<div class="control-panel">
  <%= link_to "编辑", edit_admin_channel_path(@channel), class: "btn btn-primary"%>
  <%= link_to "返回", admin_channels_path, class: "btn btn-default" %>
</div>

<div class="form">
  <div class="form-group">
    <label class="col-sm-2 control-label">名字</label>
    <div class="col-sm-10">
      <p><%= @channel.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">图片</label>
    <div class="col-sm-10">
      <%= image_tag @channel.image, style: "max-width: 80%;" %>
    </div>
  </div>
</div>

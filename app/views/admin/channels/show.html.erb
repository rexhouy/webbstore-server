<h1 class="page-header">查看频道</h1>

<%= alert_info %>

<div class="control-panel">
  <%= link_to edit_admin_channel_path(@channel), class: "btn btn-primary" do %>
    <span class="glyphicon glyphicon-pencil"></span> 编辑
  <% end %>
  <%= link_to admin_back_url(admin_channels_path), class: "btn btn-default" do %>
    <span class="glyphicon glyphicon-arrow-left"></span> 返回
  <% end %>
</div>

<div class="form">
  <div class="form-group">
    <label class="col-sm-2 control-label">名字</label>
    <div class="col-sm-10">
      <p><%= @channel.name %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">图片</label>
    <div class="col-sm-10">
      <%= image_tag @channel.image, style: "max-width: 80%;" %>
    </div>
  </div>
</div>

<%= form_for([:admin, @staff], html: {class: "form-horizontal"}) do |s| %>
  <% if @staff.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <strong>保存失败</strong>
    <ul>
      <% @staff.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= s.label :name, "姓名", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-4">
      <%= s.text_field :name, :class => "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= s.label :tel, "电话", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-4">
      <%= s.telephone_field :tel, :class => "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= s.label :photo, "照片", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <% if s.object.photo.nil? %>
      <%= image_tag "empty-img.png", class: "img-thumbnail", onclick: "uploader.open()", id: "cover_image", style: "width:180px" %>
      <% else %>
      <%= image_tag s.object.photo, class: "img-thumbnail", onclick: "uploader.open()", id: "cover_image", style: "width:180px" %>
      <% end %>
      <%= s.hidden_field :photo, id: "product_cover_image" %>
    </div>
  </div>


  <div class="form-group">
    <%= s.label :scope, "维修范围", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= s.text_field :scope, :class => "form-control", required: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-5 col-sm-offset-2">
      <%= s.check_box :display %>
      <%= s.label :display, :class => "control-label" do %>
      启用  <span class="glyphicon glyphicon-info-sign icon" title="是否在页面上显示"></span>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "确认",  data: { disable_with: "请稍后..."},  :class => "btn btn-primary" %>
      <%= link_to "取消", admin_staffs_path, :class => "btn btn-default" %>
    </div>
  </div>

<% end %>

<%= render partial: "/admin/products/upload_form" %>

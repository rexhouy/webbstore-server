<h1 class="page-header">类目管理</h1>
<ol class="breadcrumb">
  <li><a href="/admin">管控台</a></li>
  <li><a href="/admin/products">商品</a></li>
  <li class="active">类目</li>
</ol>
<%= link_to new_admin_category_path,  class: "btn btn-default" do %>
<span class="glyphicon glyphicon-plus"></span> 新建
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>名称</th>
      <th>所属栏目</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= category.name %></td>
      <td><%= channel_name category %></td>
      <td>
        <%= link_to edit_admin_category_path(category) do %>
        <span class="glyphicon glyphicon-pencil icon"></span>
        <% end %>
        <%= link_to admin_category_path(category), method: :delete, data: {confirm: %(确定要删除"#{category.name}"吗？)} do %>
        <span class="glyphicon glyphicon-trash icon"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <%= page_info @categories %>
        <%= will_paginate @categories, page_links: false %>
      </td>
    </tr>
    </tfoot>
</table>

<h1 class="page-header">类目管理</h1>
<%= link_to new_admin_category_path,  :class => "btn btn-primary" do %>
<span class="glyphicon glyphicon-plus"></span> 新建
<% end %>

<table class="table">
  <thead>
    <tr>
      <td>#</td>
      <td>名称</td>
      <td>操作</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each_with_index do |category, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= category.name %></td>
      <td>
        <%= link_to admin_category_path(category) do %>
        <span class="glyphicon glyphicon-eye-open icon"></span>
        <% end %>
        <%= link_to edit_admin_category_path(category) do %>
        <span class="glyphicon glyphicon-pencil icon"></span>
        <% end %>
        <%= link_to admin_category_path(category), method: :delete do %>
        <span class="glyphicon glyphicon-trash icon"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="6">
        <%= will_paginate @categories, page_links: false %>
      </td>
    </tr>
    </tfoot>
</table>

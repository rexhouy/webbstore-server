<div class="row order-main">
  <ul class="no-list-style order-list">
    <% @orders.each do |order| %>
      <li class="order" onclick="orders.toDetail(<%=order.id%>)">
        <h3>
          <% if order.printed? || order.reviewed? %>
          单号：<%= order.simple_order_no %>
          <% else %>
          <%= order.name %>
          <% end %>
          <i class="pull-right glyphicon glyphicon-info-sign"></i>
        </h3>
        <div>
          <% if order.canceled? %>
          <span class="pull-left text-danger"><%= payment_status order %></span>
          <% else %>
          <span class="pull-left" style="width: 50%;">
            <ul class="order-progress order-progress-small">
              <li class="active">
                <i class="glyphicon glyphicon-list-alt"></i>
              </li>
              <li class="active">
                <hr>
              </li>
              <li class="<%=(order.paid? || order.printed? || order.reviewed?) ? 'active' : ''%>">
                <i class="glyphicon glyphicon-yen"></i>
              </li>
              <li class="<%=(order.paid? || order.printed? || order.reviewed?) ? 'active' : ''%>">
                <hr>
              </li>
              <li class="<%=(order.printed? || order.reviewed?) ? 'active' : ''%>">
                <i class="glyphicon glyphicon-fire"></i>
              </li>
            </ul>
          </span>
          <% end %>
          <span class="pull-right"><%= display_datetime order.created_at %></span>
        </div>
      </li>
    <% end %>
  </ul>
</div>

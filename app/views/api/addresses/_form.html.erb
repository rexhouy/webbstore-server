<%= form_for [:api, @address], :html => {:class => "form-horizontal"} do |p| %>
  <div class="form-group">
    <%= p.label :name, "名字",  :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= p.text_field :name, :class => "form-control", "ng-model": "address.name" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :tel, "电话",  :class => "col-sm-2 control-label"  %>
    <div class="col-sm-4">
      <%= p.telephone_field :tel, :class => "form-control", "ng-model": "address.tel" %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :state, "市",  :class => "col-sm-2 control-label"  %>
    <div class="col-sm-4">
      <%= p.select :state, [], {}, {class: "form-control", "ng-model": "address.state", "ng-options": "state for state in states track by state", "ng-change": "stateChange()"} %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :city, "区", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-4">
      <%= p.select :city, {}, {}, {class: "form-control", "ng-model": "address.city", "ng-options": "city for city in cities track by city"} %>
    </div>
  </div>
  <div class="form-group">
    <%= p.label :street, "街道地址", :class => "col-sm-2 control-label"  %>
    <div class="col-sm-10">
      <%= p.text_field :street, :class => "form-control", "ng-model": "address.street" %>
    </div>
  </div>
<% end %>

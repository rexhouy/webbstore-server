  <article class="modal fade" id="address_modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">新增地址</h4>
        </div>
        <div class="modal-body">
          <%= form_for [:api, @address], :html => {:class => "form-horizontal"} do |p| %>
          <div class="form-group">
            <%= p.label :name, "名字",  :class => "col-sm-2 control-label"  %>
            <div class="col-sm-4">
              <%= p.telephone_field :name, :class => "form-control" %>
            </div>
          </div>
            <div class="form-group">
              <%= p.label :tel, "电话",  :class => "col-sm-2 control-label"  %>
              <div class="col-sm-4">
                <%= p.telephone_field :tel, :class => "form-control" %>
              </div>
            </div>
          <div class="form-group">
            <%= p.label :state, "省",  :class => "col-sm-2 control-label"  %>
            <div class="col-sm-4">
              <%= p.select :state, [], {}, {class: "form-control", "ng-model": "address.state", "ng-options": "state for state in states track by state", "ng-change": "stateChange()"} %>
            </div>
          </div>
          <div class="form-group">
            <%= p.label :city, "市", :class => "col-sm-2 control-label"  %>
            <div class="col-sm-4">
              <%= p.select :city, {}, {}, {class: "form-control", "ng-model": "address.city", "ng-options": "city for city in cities track by city"} %>
            </div>
          </div>
          <div class="form-group">
            <%= p.label :street, "街道地址", :class => "col-sm-2 control-label"  %>
            <div class="col-sm-10">
              <%= p.text_field :street, :class => "form-control" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default btn-block" data-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary btn-block" ng-click="saveAddress()">保存</button>
        </div>
    </div>
  </article>

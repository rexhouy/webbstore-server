<h2>注册</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= hidden_field_tag :introducer_token, @introducer_token%>

<div class="form-group">
  <%= f.label :tel, "手机号" %><br />
  <%= f.telephone_field :tel, autofocus: true, class: "form-control" %>
</div>

<div class="form-group">
  <label>图形验证码</label>
  <%= show_simple_captcha %>
</div>
<div class="form-group">
  <%= f.label :password, "密码" %>
  <% if @validatable %>
  <em>(最少<%= @minimum_password_length %>个字符)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, "确认密码" %><br />
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
</div>

<div class="actions">
  <%= f.submit "确定", class: "btn btn-primary btn-block" %>
</div>
<% end %>

<%= render "devise/shared/links" %>

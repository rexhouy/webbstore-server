<h2>更改密码</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :tel, "手机号" %><br />
    <%= f.telephone_field :tel, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :captcha, "验证码" %><br />
    <div>
      <div class="input-group">
        <%= text_field_tag :captcha, nil, class: "form-control", maxlength: 6, minlength: 6 %>
        <span class="input-group-btn">
          <button id="wizard" class="btn btn-default" type="button" style="height: auto;" onclick="auth.castCaptcha()">获取验证码</button>
        </span>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "密码" %>
    <% if @validatable %>
      <em>(最少<%= @minimum_password_length %>个字符)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "确认密码" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>


  <div class="actions">
    <%= f.submit "确定", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

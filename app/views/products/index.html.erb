<% @recommendProducts.each do |product| %>
  <section class="recommand row">
    <a href="/products/<%=product.id%>">
      <div class="col-md-6 col-sm-12 col-xs-12">
        <h2><%= product.name %></h2>
        <p class="desc"><%= product.description%></p>
        <button class="btn btn-lg">立即购买<i class="glyphicon glyphicon glyphicon-circle-arrow-right"></i></button>
      </div>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <%= image_tag product.cover_image %>
      </div>
    </a>
  </section>
<% end %>
<div>

  <div class="banner row" style="background:none;height:50px;">
    <h2 class="pull-left inherit-height table-center-wrap"><span class="table-center"><%=title @category%></span></h2>
    <a class="btn btn-lg pull-right highlight-link icon-link-right inherit-height table-center-wrap" href="/categories">
      <span class="table-center">商品分类</span>
    </a>
  </div>
  
  <div class="products-list">
  </div>

  <div class="products-spinner">
    <div class="spinner"></div>
  </div>

  <div id="infinit_scroll_indicator">
  </div>
  
  <script type="text/template" id="product_template">
    <section class="card col-md-2 col-sm-3 col-lg-2 col-xs-4">
  <a href="/products/{{id}}">
  <div class="image">
  <img src="{{cover_image}}">
  </div>
  <div class="desc">
  <h3>{{name}}</h3>
  <p>
  {{#origin_price}}
  <span class="origin">{{origin_price}}</span>
  {{/origin_price}}
  <span class="price">{{price}}</span>
  </p>
  </div>
  </a>
  </section>
  </script>
</div>

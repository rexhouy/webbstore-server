<!DOCTYPE html>
<html class="no-js">
  <head>
    <meta charset="utf-8">
    <title><%=Rails.application.config.name%></title>
    <meta name="description" content="科技农业，绿色生活">
    <meta name="Keywords" content="生态食品 绿色食品 拾惠社">
    <meta name="viewport" content="width=device-width,user-scalable=no">
    <link href="<%=image_url('favicon.ico')%>" rel="icon">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="no-touch">

    <header id="applicationHeader">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header" style="height:56px">
          <section class="inherit-height pull-left">
            <% if @back_url.present? %>
            <a class="btn btn-lg pull-left icon table-center inherit-height" href="<%=@back_url%>">
              <i class="glyphicon glyphicon-arrow-left" style="position:relative;top:7px;"></i>
            </a>
            <% else %>
            <button class="btn pull-left icon table-center inherit-height" onclick="menu.open();">
              <i class="glyphicon glyphicon-menu-hamburger"></i>
            </button>
            <% end %>
          </section>

          <section class="navbar-brand pull-left inherit-height">
            <a href="#"><%=@title || Rails.application.config.name%></a>
          </section>

          <section class="pull-right inherit-height table-center-wrap" id="menu_control_pannel">
            <% unless @back_url.present? %>
            <button type="button" class="icon btn btn-lg table-center inherit-height" onclick="search.open();">
              <i class="glyphicon glyphicon-search"></i>
            </button>
            <% end %>
            <% unless @no_cart %>
            <button type="button" class="icon btn btn-lg table-center inherit-height" onclick="window.location.href='/carts'" style="outline:none;">
              <i class="glyphicon glyphicon-shopping-cart"></i>
              <% if cart_number > 0 %>
              <i class="cart-number img-circle"><%=cart_number%></i>
              <% end %>
            </button>
            <% end %>
            <button type="button" class="icon btn btn-lg table-center inherit-height" onclick="window.location.href='/'" style="outline:none;">
              <i class="glyphicon glyphicon-home"></i>
            </button>
          </section>
        </div>

        <% if @submenu.present? %>
        <div class="navbar-submenu container">
          <ul class="no-list-style" style="margin:0 -15px;">
            <% @submenu.each do |link| %>
            <li><%= link_to link[:name], link[:href], class: link[:class] %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% end %>
    </header>

    <div class="search" id="search">
      <form action="/products/search" class="flex-container">
        <button type="button" onclick="search.close()"><i class="glyphicon glyphicon-arrow-left"></i></button>
        <div class="flex-item">
          <input type="search" name="search_text" id="searchText" required="true" placeholder="搜索<%=Rails.application.config.name%>" autocomplete="off"></input>
        </div>
        <button type="submit"><i class="glyphicon glyphicon-search"></i></button>
      </form>
    </div>


    <nav id="menu" class="navbar-side">
      <header>
        <% if user_signed_in? %>
        <a  class="inherit-height pull-left" href="/me">
          <%= image_tag "user.png" %>
          <p class="inherit-height nav-header-link-text"><span class="table-center inherit-height"><%= current_user.tel %></span></p>
        </a>
        <% else %>
        <a href="/users/sign_in" target="_self" class="inherit-height pull-left">
          <%= image_tag "user.png" %>
          <p class="inherit-height nav-header-link-text"><span class="table-center inherit-height">登录</span></p>
        </a>
        <% end %>
        <button type="button" class="icon btn btn-lg pull-right inherit-height" onclick="menu.close();">
          <i class="glyphicon glyphicon-remove"></i>
        </button>
      </header>

      <section class="nav-section">
        <ul class="nav">
          <% if user_signed_in? %>
          <li><a href="/me" class="icon-link-left"><i class="glyphicon glyphicon-home"></i>我的<%=Rails.application.config.name%></a></li>
          <% end %>
          <li><a href="/orders" class="icon-link-left"><i class="glyphicon glyphicon-list-alt"></i>订单</a></li>
          <li><a href="/carts" class="icon-link-left"><i class="glyphicon glyphicon-shopping-cart"></i>购物车</a></li>
          <% @channels[1..@channels.size].each do |c| %>
          <li><a href="<%=c.url%>" class="icon-link-left"><i class="glyphicon glyphicon-grain"></i><%=c.name%></a></li>
          <% end %>
          <li><a href="/about" class="icon-link-left">关于</a></li>
        </ul>
      </section>
    </nav>

    <div class="container" style="background-color: #fff;min-height:200px;padding-top:5px;">
      <%= yield %>
    </div>

    <%= image_tag "spinner.gif", style: "position:fixed;left:-100000px;"%>
    <div><!-- Loading animation  -->
      <div class="block-layer block-layer-light" onclick="menu.close()"></div>
      <div class="spinner-container img-circle">
        <div class="spinner"></div>
      </div>
    </div>

    <div id="block-layer" class="block-layer">
    </div>

    <footer>
      <div class="container">
        <p class="copyright">Copyright © 2015 北京拾惠社农业科技有限公司</p>
        <ul>
          <li><span class="glyphicon glyphicon-map-marker"></span> 北京市中关村科技园平谷分园</li>
          <li>京ICP备15036211号</li>
        </ul>
        <a class="contact-us" data-toggle="modal" data-target="#contactUsModal">联系我们 <i class="glyphicon glyphicon-comment"></i></a>
      </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade" id="contactUsModal" tabindex="-1" role="dialog" aria-labelledby="contactUsModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">留言</h4>
          </div>
          <div class="modal-body">
            <textarea id="messageContent" class="form-control" style="min-height: 140px;" required></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
            <button type="button" class="btn btn-primary" onclick="messages.submit()">提交</button>
          </div>
        </div>
      </div>
    </div>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag params[:controller] %>

</body>
</html>

          <%= image_tag "cart.png", alt: "拾惠社", class: "img-circle"%>
        </div>
        <h3>线上商店</h3>
      </a>
    </section>

    <section class="col-sm-3 col-md-3 col-xs-4 card">
      <a  href="/">
        <div class="image">
          <%= image_tag "video.png", alt: "拾惠社", class: "img-circle"%>
        </div>
        <h3>视频中心</h3>
      </a>
    </section>

    <section class="col-sm-3 col-md-3 col-xs-4 card">

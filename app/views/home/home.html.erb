<div>
  <!-- Slide -->
  <div id="sketch-carousel" class="row" style="height:300px; overflow: hidden;">
    <div class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#sketch-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#sketch-carousel" data-slide-to="1"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag "preview.jpg" %>
        </div>
        <div class="item">
          <%= image_tag "cover.jpg" %>
        </div>
      </div>
    </div>
  </div>


  <div class="row home-nav" style="margin-top: 20px;">

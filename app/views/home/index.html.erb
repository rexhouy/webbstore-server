<div>
  <div class="row" style="background-color: #fff;">
    <div id="cm-carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#cm-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#cm-carousel" data-slide-to="1"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%=image_tag "cm-1.png" %>
        </div>
        <div class="item">
          <%=image_tag "cm-1.png" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row home-nav list" style="margin-top:15px;">
    <% @channels.each do |c| %>
    <section class="col-sm-6 col-md-6 col-xs-12 col-lg-4">
      <a href="<%=c.url%>" style="">
        <div class="col-sm-3 col-md-3 col-xs-3">
          <%= image_tag c.image, alt: c.name%>
        </div>
        <div class="col-sm-7 col-md-7 col-xs-7" style="padding-left:0;">
          <h3 style="color:<%=c.color%>"><%=c.name%></h3>
        </div>
        <div class="col-sm-2 col-md-2 col-xs-2">
          <span class="glyphicon glyphicon-menu-right" style="color:<%=c.color%>"></span>
          <!-- <div style="background-color:<%=c.color%>" class="strip"></div> -->
        </div>
      </a>
    </section>
    <% end %>
  </div>

</div>

<div>
  <h2 style="padding-left:5px;"><%= @shop.name %></h2>
  <div class="products-list">
    <% @products.each do |product| %>
    <div class="card col-md-3 col-sm-4 col-xs-6">
      <%=link_to "/products/#{product.id}" do %>
        <div class="image">
          <%=image_tag product.cover_image%>
        </div>
        <div class="title">
          <h3><%=product.name%></h3>
          <div class="price">&yen; <%=product.price%></div>
        </div>
        <div class="desc"><%=product.description%></div>
      <% end %>
    </div>
    <% end %>
  </div>

</div>

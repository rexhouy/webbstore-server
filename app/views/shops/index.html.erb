<div class="row shop-container">
  <% @shops.each do |shop| %>
  <a href="/shops/<%=shop.id%>" class="shop-card col-xs-12 col-sm-6 col-md-4">
    <div class="image-container">
      <%=image_tag shop.image%>
    </div>
    <div class="content-container">
      <h2><%=shop.name%></h2>
      <p><%=shop.introduce%></p>
    </div>
  </a>
  <% end %>
</div>
